#utilisation de sendgrid pour serveur smtp
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /tmp/msmtp.log

account        sendgrid 
host           smtp.sendgrid.net
port           587
from           noreply@domain.fr
user           apikey
password       SG.APIKEY

account default : sendgrid
